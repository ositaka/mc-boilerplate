extends ../base.pug

block variables
  - var template = 'intro'

block content
  .intro(data-background="#768662" data-color="#F9F1E7")
    .intro__wrapper
      .intro__titles
        //- each collection, index in collections
        //-   .intro__titles__label=`${intro.data.collection} ${Numbers(index)}`
        //-   .intro__titles__title=collection.data.title

      .intro__gallery
        each media in intro.data.gallery
          figure.intro__gallery__media
            img.intro__gallery__media__image(alt=media.image.alt data-src=media.image.url)

      a.intro__link(href=Link(intro.data.link))=intro.data.button
        svg.intro__link__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 288 60")
          path(stroke="currentColor" fill="none" d="M144,0.5c79.25,0,143.5,13.21,143.5,29.5S223.25,59.5,144,59.5S0.5,46.29,0.5,30S64.75,0.5,144,0.5z")
          path.intro__link__icon__path(stroke="#CB0001" fill="none" d="M144,0.5c79.25,0,143.5,13.21,143.5,29.5S223.25,59.5,144,59.5S0.5,46.29,0.5,30S64.75,0.5,144,0.5z")
