extends ../base.pug

block variables
  - var template = 'pack'
  - var total_features = pack.data.features.length === 4 ? 'two__cols' : ''

block content
  .pack(data-background="#3131f1" data-color="#fff")
    .pack__wrapper

      section.pack__overview
        .pack__header
          h2.pack__title(data-animation="title")!=pack.data.title.replace(/\n/g, '<br>')
          .pack__price=`€${pack.data.price}`

        .pack__details(class=total_features)
          each feature in pack.data.features
            .pack__feature
              h3=feature.feature_title
              each item in feature.feature_description
                .packs__pack__feature=item.text

        .pack__overview__button(data-animation="title")
          a(href="#start-project")=pack.data.button

        .pack__highlight
          .pack__highlight__left
            .pack__highlight__icons
              each icon in pack.data.icons
                .icon
                  .icon__icon
                    include ../partials/icons
                  .icon__title=icon.icon_title

            .pack__highlight__text
              h3.pack__highlight__title=pack.data.highlight_title
              p.pack__highlight__description=pack.data.highlight_description
      
          .pack__highlight__right
            if ( pack.data.is_video === true)
              figure.pack__highlight__media
                video.pack__highlight__media__image(poster=`${pack.data.highlight_image.url}` preload='auto' playsinline='true' autoplay='true' loop='true' muted='true' disablepictureinpicture='true' src=`${pack.data.highlight_video.url}`)
            else
              figure.pack__highlight__media
                img.pack__highlight__media__image(alt=pack.data.highlight_image.alt data-src=pack.data.highlight_image.url)

        .pack__about
          h3.pack__about__title=pack.data.info_main_title
          .pack__about__infos
            each info in pack.data.infos
              .pack__about__info
                h4.pack__about__info__title=info.info_title
                .pack__about__info__description!=PrismicDOM.RichText.asHtml(info.info_description).replace(/<p>/g, '<p data-animation="paragraph">')
                
                if ( info.info_button )
                  div(data-animation="title")
                    a.pack__about__info__button(href=`${lang}/${info.info_link.uid}/`)!=info.info_button
        
      section.pack__start__project#start-project
        .pack__start__project__wrapper
          .pack__start__project__top
            h2.pack__start__project__title=pack.data.form_title
