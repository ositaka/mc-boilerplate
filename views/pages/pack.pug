          form.pack__start__project__form(name="pack" method="POST" action="/send-pack")
            input(type='hidden' name='form' value=`${pack.data.title}`)
            input(type='hidden' name='price' value=`${pack.data.price}`)
            label
              span.sr-only=globals[0].data.name
              input#name(type="text" name="name" placeholder=`${globals[0].data.name}` required)
            //- label
            //-   span.sr-only=globals[0].data.company
            //-   input#company(type="text" name="company" placeholder=`${globals[0].data.company}` required)
            label
              span.sr-only=globals[0].data.email
              input#email(type="text" name="email" placeholder=`${globals[0].data.email}` required)
            label
              span.sr-only=globals[0].data.message
              textarea#message(name="message" placeholder=`${globals[0].data.message}` rows="6" required)
            input.pack__start__project__button(type="submit" value=`${globals[0].data.message_button}`)

      section.pack__packs__slider
        h3.pack__packs__title=pack.data.packs_title
        .packs__slider
          .swiper-container
            .swiper-wrapper
              each pack in packs
                .swiper-slide
                  a.packs__pack(href=`/${lang}/${pack.data.parent_page.uid}/${pack.uid}/`)
                    h3.packs__pack__title!=pack.data.title.replace(/\n/g, '<br>')
                    .packs__pack__price=`€${pack.data.price}`

                    each feature in pack.data.features
                      .packs__pack__feature=feature.feature_title

      include ../partials/footer
