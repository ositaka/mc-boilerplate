footer.footer
  .footer__wrapper
    .footer__left
      .footer__logo(data-animation="title")=footer.data.title
      .footer__mobile
        //- .footer__title(data-animation="title")=
        a.footer__button(href=`/${footer.data.link.lang}/${footer.data.link.uid}/` data-animation="title")=footer.data.button
    
    .footer__right
      .footer__navigation
        each link in footer.data.navigation
          a.footer__navigation__link(href=`/${link.link.lang}/${link.link.uid}/` data-animation="title")=link.link_text

      .footer__address 
        p(data-animation="title")=footer.data.address_title
        p(data-animation="title")!=footer.data.address.replace(/\n/g, '<br>')
      
      .footer__email
        p(data-animation="title")=footer.data.email_title
        a(href="mailto:info@mediacreators.studio" data-animation="title") info@mediacreators.studio

  .footer__social
    .footer__social__wrapper
      a.footer__social__link(href=`${footer.data.links[0].instagram}` data-animation="title") Instagram
      a.footer__social__link(href=`${footer.data.links[0].facebook}` data-animation="title") Facebook
      a.footer__social__link(href=`${footer.data.links[0].dribbble}` data-animation="title") Dribbble